<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_btn_login">
    <ImageView
        android:id="@+id/iv_item_header_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_16"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_8"
        android:src="@drawable/github_logo"/>
    <View
        android:id="@+id/v_item_header_divider"
        android:layout_width="1dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_marginBottom="@dimen/margin_16"
        android:layout_below="@id/iv_item_header_avatar"
        android:background="@android:color/white"
        android:layout_centerHorizontal="true" />
    <com.rey.material.widget.Button
        android:id="@+id/btn_item_header_followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/v_item_header_divider"
        android:layout_below="@id/iv_item_header_avatar"
        android:textAllCaps="false"
        android:background="@null"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_5"
        style="@style/Material.Drawable.Ripple.Touch.Light" />
    <com.rey.material.widget.Button
        android:id="@+id/btn_item_header_following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/v_item_header_divider"
        android:layout_below="@id/iv_item_header_avatar"
        android:textAllCaps="false"
        android:background="@null"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_5"
        style="@style/Material.Drawable.Ripple.Touch.Light"/>
</RelativeLayout>